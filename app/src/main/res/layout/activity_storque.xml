<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="观光车辆/观光列车方向盘转向力与转向角度检测"
            android:textColor="@color/font"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="5dp"
        android:background="@drawable/backble"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginStart="10dp"
            android:text="蓝牙状态："
            android:background="#00000000"
            android:gravity="end|center_vertical"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/storqueBLE"
            fontPath="fonts/楷体.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="2sp"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:drawableStart="@drawable/btle_disconnected"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginStart="10dp"
            android:text=""
            android:background="#00000000"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/statusST_txt"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="未连接"
            android:gravity="end|center_vertical"
            android:textColor="@color/white"
            android:background="#00000000"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartSTorque"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="start"
        android:background="@color/backgroundText"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="时间（s）"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="标准要求"
            android:textSize="20sp"
            android:textColor="@color/font"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/storqueHelpBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/help1"
            android:text=""
            android:textColor="@color/white"
            android:background="#00000000"
            android:textSize="1sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="start|center_vertical"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/font"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radioSTButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/angleSTRBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="转动量试验"
                android:checked="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                fontPath="fonts/楷体.ttf"/>
            <RadioButton
                android:id="@+id/forceSTRBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="转向力试验"
                android:textColor="@color/white"
                android:textSize="20sp"
                fontPath="fonts/楷体.ttf"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <TextView
            fontPath="fonts/楷体.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="左转向"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="右转向"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/addSTBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableTop="@drawable/add1"
            android:background="#00000000"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="添  加" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="实时角度值(°)："
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:id="@+id/realAngleLST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="  "
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:id="@+id/realAngleRST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text=""
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <TextView
                fontPath="fonts/楷体.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="最大角度值(°)："
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/angleMaxLST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text=" "
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:id="@+id/angleMaxRST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text=" "
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <Button
                android:id="@+id/angleMaxSTBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="数据清零"
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="最大角度差值(°)："
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:id="@+id/angleErrST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="  "
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <Button
                android:id="@+id/angleErrMaxSTBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="数据清零"
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="实时受力值(N)："
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:id="@+id/realForceLST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="  "
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:id="@+id/realForceRST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text=""
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="最大受力值(N)："
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:id="@+id/forceMaxLST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text=" "
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:id="@+id/forceMaxRST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text=""
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <Button
                android:id="@+id/forceMaxSTBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="数据清零"
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <TextView
                fontPath="fonts/楷体.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="最大受力差值(N)："
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/forceErrST_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text=" "
                android:background="@drawable/shape_ble"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
            <Button
                android:id="@+id/forceErrMaxSTBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="数据清零"
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                fontPath="fonts/楷体.ttf"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="3"
        android:background="@color/backgroundText"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/torqueListST"
            fontPath="fonts/楷体.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <Button
            android:id="@+id/startSTBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="开始"
            android:background="#00000000"
            android:drawableTop="@drawable/start"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/stopSTBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="结   束"
            android:background="#00000000"
            android:drawableTop="@drawable/stop"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/zeroSTBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/zero"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:background="#00000000"
            android:text="归零"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/printSTBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00000000"
            android:drawableTop="@drawable/print"
            android:textColor="@color/white"
            android:text="打印"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <Button
            android:id="@+id/saveSTBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00000000"
            android:drawableTop="@drawable/save"
            android:textColor="@color/white"
            android:text="保存"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/scanSTBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00000000"
            android:drawableTop="@drawable/scan1"
            android:textColor="@color/white"
            android:text="浏览"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/exportSTBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableTop="@drawable/export"
            android:textColor="@color/white"
            android:text="导出"
            android:textSize="20sp"
            android:background="#00000000"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/backSTBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableTop="@drawable/back1"
            android:textColor="@color/white"
            android:text="返回"
            android:background="#00000000"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="20sp" />
</LinearLayout>
