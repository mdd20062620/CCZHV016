<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="观光车辆/观光列车车轮转角检测"
            android:textColor="@color/font"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_margin="10dp"
        android:background="@drawable/backble"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:layout_marginStart="10dp"
            android:text="蓝牙状态："
            android:background="#00000000"
            android:gravity="end|center_vertical"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/AngleLSBLE"
            fontPath="fonts/楷体.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="2sp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableStart="@drawable/btle_disconnected"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/statusSAL_txt"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="未连接"
            android:gravity="start|center_vertical"
            android:textColor="@color/white"
            android:background="#00000000"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:layout_marginStart="10dp"
            android:text="蓝牙状态："
            android:background="#00000000"
            android:gravity="end|center_vertical"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/AngleRSBLE"
            fontPath="fonts/楷体.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="2sp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableStart="@drawable/btle_disconnected"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/statusSAR_txt"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="未连接"
            android:gravity="end|center_vertical"
            android:textColor="@color/white"
            android:background="#00000000"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartSAngle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="start"
        android:background="@color/backgroundText"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="时间（s）"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="测试项目："
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            fontPath="fonts/楷体.ttf"/>
        <Spinner
            android:id="@+id/AngleTypeS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:entries="@array/angle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radioSAButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/leftSBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="左转向"
                android:textSize="20sp"
                android:textColor="@color/white"
                fontPath="fonts/楷体.ttf"/>
            <RadioButton
                android:id="@+id/rightSBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="40dp"
                android:text="右转向"
                android:textSize="20sp"
                android:textColor="@color/white"
                fontPath="fonts/楷体.ttf"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AngleXLS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="左轮水平角度："
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/AngleYLS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="左轮垂直角度："
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/AngleZLS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="左轮左右角度："
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/AngleXRS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="右轮水平角度："
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/AngleYRS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="右轮垂直角度："
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/AngleZRS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="右轮左右角度："
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            fontPath="fonts/楷体.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="左轮"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="右轮"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:background="#00000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start"
            android:text="实时角度值(°)："
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/realAngleLS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="  "
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/realAngleRS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/beforeSBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="准  备"
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start"
            android:text="最大角度值(°)："
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/angleMaxLS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=" "
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/angleMaxRS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=" "
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/angleMaxSBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="数据清零"
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start"
            android:text="实时外倾角值(°)："
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/realAngleWLS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="  "
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/realAngleWRS_txt"
            fontPath="fonts/楷体.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_ble"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/angleWSBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="示意图"
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start"
            android:text="最大外倾角值(°)："
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/angleMaxWLS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=" "
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/angleMaxWRS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/angleMaxWSBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="数据清零"
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start"
            android:text="主销后倾角值(°)："
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/angleMaxZHLS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=" "
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/angleMaxZHRS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/angleZHSBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="示意图"
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            fontPath="fonts/楷体.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shape_text"
            android:gravity="start"
            android:text="主销内倾角值(°)："
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/angleMaxZNLS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=" "
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <TextView
            android:id="@+id/angleMaxZNRS_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:background="@drawable/shape_ble"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/angleZNSBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="示意图"
            android:background="@drawable/shape_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <Button
            android:id="@+id/startASBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="开始"
            android:drawableTop="@drawable/start"
            android:background="#00000000"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/stopASBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="结束"
            android:textColor="@color/white"
            android:drawableTop="@drawable/stop"
            android:background="#00000000"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/zeroASBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/zero"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:background="#00000000"
            android:text="归零"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/printASBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:drawableTop="@drawable/print"
            android:background="#00000000"
            android:text="打印"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/saveASBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:drawableTop="@drawable/save"
            android:background="#00000000"
            android:text="保存"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <Button
            android:id="@+id/scanASBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableTop="@drawable/scan1"
            android:background="#00000000"
            android:text="浏览"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/exportASBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableTop="@drawable/export"
            android:background="#00000000"
            android:text="导出"
            android:textColor="@color/white"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/white"
