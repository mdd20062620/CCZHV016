<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="叉车检规参数设置"
            android:textColor="@color/font"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="方向盘最小操作力值："
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="20sp"
                fontPath="fonts/楷体.ttf"/>

            <EditText
                android:id="@+id/forceMinSet_txt"
                fontPath="fonts/楷体.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/shape_ble"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="N"
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="20sp"
                fontPath="fonts/楷体.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="方向盘最大操作力值："
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="20sp"
                fontPath="fonts/楷体.ttf"/>
            <EditText
                android:id="@+id/forceMaxSet_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/shape_ble"
                android:text="20"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="N"
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="20sp"
                fontPath="fonts/楷体.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="方向盘转向力差值："
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="20sp"
                fontPath="fonts/楷体.ttf"/>
            <EditText
                android:id="@+id/forceErrSet_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/shape_ble"
                fontPath="fonts/楷体.ttf"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="N"
                android:background="@drawable/shape_text"
                android:textColor="@color/white"
                android:textSize="20sp"
                fontPath="fonts/楷体.ttf"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/initSetBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:text="默认"
            android:drawableTop="@drawable/init1"
            android:textColor="@color/white"
            android:background="#00000000"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/okSetBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:text="确认"
            android:drawableTop="@drawable/start1"
            android:textColor="@color/white"
            android:background="#00000000"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
        <Button
            android:id="@+id/cancelSetBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/delete1"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:text="取消"
            android:textSize="20sp"
            fontPath="fonts/楷体.ttf"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="20sp" />
</LinearLayout>
